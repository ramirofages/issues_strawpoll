<h4><%= @my_project.name %><i class="small material-icons"><%= visibility_icon(@my_project)%></i></h4>

<p>
  <strong>Visibility:</strong>
  <%= visibility(@my_project) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @my_project.description %>
</p>

<%= link_to 'Project configuration', edit_my_project_path(@my_project), :class => 'waves-effect waves-light btn' %> 
<br><br>
<div class="divider"></div>

<% if @my_project.project_source == nil %>
	<h4>Source: none </h4>
	<%= link_to 'Create source', new_source_my_project_path(@my_project), :class => 'waves-effect waves-light btn' %> 
<% else %>

	<% set_source_decorator %>
	  
	<h4>Source:  <%= @my_project.project_source.name %></h4>

	<%= link_to 'Source configuration',  source_path(@my_project) , :class => 'waves-effect waves-light btn'  %> 
<% end %>

<br><br>
<div class="divider"></div>

<h4>Polls  </h4>
	<%= render 'show_polls' %>
<br>
<br>
<div class="divider"></div>
<br>
<%= link_to '<< Back', my_projects_path, :class => 'waves-effect waves-light btn' %>

