<p id="notice"><%= notice %></p>
<% set_source_decorator %>
<h4>Project: </h4>
<p>
  <strong>Name:</strong>
  <%= @my_project.name %>
</p>

<p>
  <strong>Visibility:</strong>
  <%= visibility(@my_project) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @my_project.description %>
</p>

<%= link_to 'Project configuration', edit_my_project_path(@my_project), :class => 'waves-effect waves-light btn' %> 
<br><br>
<div class="divider"></div>
<h4>Source: </h4>


<% if @my_project.project_source == nil %>
	<%= link_to 'Create source', new_my_project_mocked_source_path(@my_project), :class => 'waves-effect waves-light btn' %> 
<% else %>
	<p>
	  <strong>Name:</strong>
	  <%= @my_project.project_source.name %>
	</p>
	<%= link_to 'Source configuration',  my_project_mocked_source_path(@my_project), :class => 'waves-effect waves-light btn'  %> 
<% end %>
<br><br>
<div class="divider"></div>
<br>
<%= link_to '<< Back', my_projects_path, :class => 'waves-effect waves-light btn' %>

