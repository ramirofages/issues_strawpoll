<h4>Poll <%= @poll.name %></h4>
<div class="row">
<div class="col s8">
	<p> <%= @poll.description %> </p>
  <p><strong> Enabled: </strong> <%= human_boolean(@poll.enabled) %>  </p>

	<p><strong> Expiration date:</strong> <%= @poll.expiration_date %>  </p>
	<p><strong> Ends in:</strong> <%= poll_ends_in(@poll) %></p>
	<br>


	<%= link_to '<< Back', user_project_path(@project), :class => 'waves-effect waves-light btn' %>
	<%= link_to 'Configuration', edit_user_project_poll_path(@project, @poll), :class => 'waves-effect waves-light btn' %> 
  <%= link_to 'Enable/Disable', enable_disable_user_project_poll_path(@project, @poll), :method => :post, :class => 'waves-effect waves-light btn' %> 
	<br>

	<br>
  <div class="divider"></div>

	<h5> Issues: </h5>
  <%= link_to 'See votes', project_poll_path(@project, @poll), :class => 'waves-effect waves-light btn' %>

    <% @poll.issues.each do |issue| %>
      <div class="col s12 ">
        <div class="card  light-green lighten-2 ">
          <div class="card-content ">

            <span class="card-title">
            	<%= issue.name %>
            </span>

						<div class="divider"></div>

            <p><%= issue.description %></p>
          </div>
        </div>
    	</div>
    <% end %>


     
</div>
</div>
