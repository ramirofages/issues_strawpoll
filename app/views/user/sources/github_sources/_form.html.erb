<%= form_for @project.project_source, url: user_project_github_source_path(@project) do |f| %>

	<div class="field">
		<%= f.label 'Repository path' %><br>
		<%= f.text_field :repo_url, placeholder: 'ramirofages/issues_strawpoll', required: true %>
	</div>

		<div class="field">
		<%= f.check_box :include_pull_request %>

		<%= f.label :include_pull_request %><br>
	</div>
<br>
	
	<button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit %>
		<i class="material-icons right">send</i>
	</button>

<% end %>
