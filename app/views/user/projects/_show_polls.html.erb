<% if @project.project_source.nil? %>
	<p><strong> create source first </strong> </p>
<% else %>
	  <a class="btn-floating btn-small waves-effect waves-light  pink darken-3" href=<%= new_user_project_poll_path(@project) %>>
	  	<i class="material-icons">add</i>
	  </a> 

      <table class="striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Ends in</th>
        </tr>
      </thead>

      <tbody>
        <% @project.polls.each do |poll| %>
          <tr>
            <td><%= poll.name %></td>
            <td><%= poll_ends_in(poll)   %> </td>

            <td><%= link_to 'Details', user_project_poll_path(@project, poll) %></td>
            <td><%= link_to 'Destroy', user_project_poll_path(@project, poll), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<% end %>