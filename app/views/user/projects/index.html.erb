
<div class="row">
  <div class="col s8 offset-s2">
    <h2 class="center">My projects</h2>
    <table class="striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Visibility</th>
          <th>Source</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td ><strong ><%= visibility(project) %></strong></td>
            <td><%= source_name(project.project_source) %></td>
            <td><%= link_to 'Details', user_project_path(project) %></td>
            <td><%= link_to 'Destroy', user_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Project', new_user_project_path, :class => 'waves-effect waves-light btn' %>

  </div>
</div>



