<%= form_for @project, url: {action: action} do |f| %>


  <%= render "application/form_errors", target: @project %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>

     
  <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
  </div><br>


  <div class="field">
    <%= f.check_box :public %>
    <%= f.label :public %>
  </div><br>

  <button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit %>
    <i class="material-icons right">send</i>
  </button>
<% end %>
