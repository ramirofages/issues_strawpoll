
<div class="row">
  <div class="col s8 offset-s2">
    <h2 class="center">Projects</h2>

    <ul class="collection">
      <% @projects.each do |project| %>
        <li class="collection-item avatar">
          <i class="material-icons circle blue darken-1">play_arrow</i>     
          <span class="title">
            <strong><%= link_to project.name, project_path(project) %></strong>
          </span>
          <p>
            <%= project.description %>
          </p>
          <% if is_owner?(project) %>
            <a href= <%= my_project_path(project)%> class="secondary-content"><i class="material-icons">settings</i></a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<br>

