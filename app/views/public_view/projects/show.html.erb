
<div class="row" >
<div class="col s8 offset-s2">
	<h2> <%= @project.name %> </h2>

	<%= @project.description %>
	<br>
	<br>
	<div class="divider"></div>

	<br>

	<h4> Polls </h4>
	<% if @project.polls.any? %>
		<table class="striped">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Ends in</th>
		      <th>active</th>
		    </tr>
		  </thead>

		  <tbody>
		    <%  @project.polls.each do |poll| %>
		      <tr>
		        <td><%= poll.name %></td>
		        <td ><strong > <%= poll_ends_in(poll) %></strong></td>
		        <td>yes</td>
		        <td><%= link_to 'Details', project_poll_path(@project, poll) %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	<% else %>
		none
	<% end %>
  <br>
	<%= link_to '<< Back', projects_path, :class => 'waves-effect waves-light btn'  %>

</div>
</div>

