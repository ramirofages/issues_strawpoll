<div class="row" >
<div class="col s8 offset-s2">


<h5> Issues for <%= @poll.name %>: </h5>
<br>
  <% @poll.issues.each do |issue| %>
      <div class="card  blue-grey darken-1 ">
        <div class="card-content white-text">

          <span class="card-title">
          	<%= issue.name %>
          </span>

					<div class="divider"></div>

          <p><%= issue.description %></p>
        </div>
      </div>
  <% end %>
<br>
<%= link_to 'Send votes', new_vote_project_poll_path(@poll.project,@poll), :class => 'waves-effect waves-light btn red lighten-2'  %>


</div>
</div>
