<div class="row" >
<div class="col s8 offset-s2">
<h2 class="center"> <%= @poll.name %></h2>

<p> <%= @poll.description %> </p>

<br>
<%= link_to '<< Back', project_path(@poll.project), :class => 'waves-effect waves-light btn'  %>
<br><br>
	<div class="divider"></div>

<h5> Issues: </h5>
<% if can_vote?(@poll) %>
  <%= link_to 'Vote', new_project_poll_vote_path(@poll.project,@poll), :class => 'waves-effect waves-light btn red lighten-2'  %>
  <br><br>
<% end %>

  <% @poll.issues.each do |issue| %>
      <div class="card  blue-grey darken-1 ">
        <div class="card-content white-text">

          <span class="card-title">
            <%= issue.name %> (votes: <%= issue.votes.size %>)
          	
          </span>

					<div class="divider"></div>

          <p><%= issue.description %></p>
        </div>
      </div>
  <% end %>
<br>





</div>
</div>
